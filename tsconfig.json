{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "outDir":"dist",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "module": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "ES5"
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["src/*.ts", "src/**/*.ts"]
}
